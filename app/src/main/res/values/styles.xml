<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextRegular">
        <item name="android:fontFamily">@font/sfuidisplay_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TextBold">
        <item name="android:fontFamily">@font/sfuidisplay_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TextRegular.Label">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/brown_1</item>
    </style>
    <style name="TextRegular.Edit">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/brown_2</item>
        <item name="hintTextAppearance">@style/TextRegular.Edit</item>
    </style>
    <style name="TextRegular.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/brown_2</item>
    </style>
    <style name="TextRegular.Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/brown_1</item>
    </style>
    <style name="TextRegular.CardTitle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/brown_2</item>
    </style>
    <style name="TextRegular.Info">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/brown_1</item>
    </style>
    <style name="TextBold.CardTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/brown_1</item>
    </style>
    <style name="TextBold.Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/brown_1</item>
    </style>
    <style name="TextBold.Count">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/brown_1</item>
    </style>
    <style name="TextBold.Toolbar">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/brown_1</item>
    </style>
    <style name="TextBold.Info">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/brown_1</item>
    </style>
    <style name="TextBold.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/brown_3</item>
    </style>

    <style name="CustomButton">
        <item name="android:textAppearance">@style/TextBold.Button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <declare-styleable name="EditTextWidget">
        <attr name="typeInputText" format="integer"/>
        <attr name="hintText" format="string"/>
        <attr name="label" format="string"/>
        <attr name="errorText" format="string"/>
    </declare-styleable>
</resources>